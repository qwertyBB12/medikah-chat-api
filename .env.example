# Medikah Chat API - Environment Variables
# Copy this file to .env and fill in values

# SendGrid (required for email notifications)
SENDGRID_API_KEY=
SENDGRID_SENDER_EMAIL=
SENDGRID_SANDBOX_MODE=true  # Set to false for production

# Doctor notifications (required)
DOCTOR_NOTIFICATION_EMAIL=

# Appointment security (required - generate with: openssl rand -hex 32)
APPOINTMENT_HASH_KEY=

# Telemedicine (at least one required)
DOXY_ROOM_URL=
DOXY_BASE_URL=

# Doctor display name
ON_CALL_DOCTOR_NAME=Medikah On-Call Doctor

# OpenAI (optional - for patient education summaries)
OPENAI_API_KEY=

# Scheduling
APPOINTMENT_DURATION_MINUTES=30

# Supabase (optional - falls back to in-memory if not set)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Logging
LOG_LEVEL=INFO

# CORS (comma-separated allowed origins for production)
ALLOWED_ORIGINS=http://localhost:3000
